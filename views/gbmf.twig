{% extends 'layout.twig' %}

{% block head %}
  <meta property="og:title" content="gbmf" />
  <meta property="og:site_name" content="gbmf" />
  <meta property="og:url" content="http://prichey.net/gbmf" />
  <meta property="og:description" content="ground beneath my feet" />
  <meta property="og:image" content="http://prichey.net/images/gbmf-thumb.png" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@prestonrichey" />
  <meta name="twitter:title" content="gbmf" />
  <meta name="twitter:description" content="ground beneath my feet" />
  <meta name="twitter:image:src" content="http://prichey.net/images/gbmf-thumb.png" />
{% endblock %}

{% block content %}
  <section class="gbmf-main">
    <div class="gbmf-images-wrap abs-height-padded">
      <ul class="gbmf-images">
        <li class="grid-sizer"></li>
        {% for image in images if image.complete %}
          <li class="gbmf-image-wrap"
            data-id="{{ image.id }}"
            data-latitude="{{ image.location.latitude }}"
            data-longitude="{{ image.location.longitude }}">
            <div class="gbmf-image" style="background-image: url('{{ image.src }}')"></div>
            <div class="gbmf-info">
              <ul class="gbmf-info-list">
                <li>{{ image.date }}</li>
                <li>lat: {{ image.location.latitude }}</li>
                <li>lng: {{ image.location.longitude }}</li>
                <li><a class="full" href="{{ image.fullSrc }}">{{ image.id }}</a></li>
              </ul>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="gbmf-map-wrap">
      <div id="gbmf-map"></div>
    </div>
  </section>

  <script type="text/javascript" src="http://maps.google.com/maps/api/js"></script>
  <!-- <script src="https://unpkg.com/masonry-layout@4.0/dist/masonry.pkgd.min.js"></script> -->
  <script src="https://unpkg.com/packery@2.0/dist/packery.pkgd.min.js"></script>
  <script src="https://unpkg.com/imagesloaded@4.1/imagesloaded.pkgd.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.js">

  </script>
{% endblock %}

{% block footer_links %}
  <ul class="links">
    <li><a href="/">home</a></li>
    <!-- <li><a href="/projects">projects</a></li> -->
    <li><a href="/about">about</a></li>
  </ul>
{% endblock %}
